@{
}
<div class="container-fluid" m-3>
    <h2>Wpisz dane kontaktu</h2>
    <form asp-controller="Contact" asp-action="Add" method="post">
        <div class="mb-3">
            <span asp-validation-for="Name" class="text-danger"></span>
            <label asp-for="Name">Nazwa</label>
            <input class="form-control" asp-for="Name" />
        </div>
        <div class="mb-3">
            <span asp-validation-for="BirthDate" class="text-danger"></span>
            <label asp-for="BirthDate">Data urodzin</label>
            <input class="form-control" asp-for="BirthDate" />
        </div>
        <div class="mb-3">
            <span asp-validation-for="Email" class="text-danger"></span>
            <label asp-for="Email">Email</label>
            <input class="form-control" asp-for="Email" />
        </div>
        <div class="mb-3">
            <span asp-validation-for="Phone" class="text-danger"></span>
            <label asp-for="Phone">Telefon</label>
            <input class="form-control" asp-for="Phone" />
        </div>
        <div class="mb-3">
            <button class="btn btn-primary" type="submit">Zapisz</button>
        </div>
    </form>
</div>
